#!/bin/bash

while getopts ":chlx:e:m:n:r:s:" option; do
   case $option in
      c)
         ./notes-collect
         exit;;
      e) 
         edit+=("$OPTARG")
         nano /home/ric/notes/"${edit[0]}".note
         exit;;
      h) 
         ./notes-help
         exit;;
      l) 
         ls /home/ric/notes
         exit;;
      n)
         ./nn "$2" "$3"
         exit;;
      m)
         mv /home/ric/notes/"$2".note /home/ric/notes/"$3".note
         exit;;
      r) 
         read+=("$OPTARG")
         cat /home/ric/notes/"${read[0]}".note
         exit;;
       s) 
         query+=("$OPTARG")
         find /home/ric/notes -name "*${query[0]}*.note" -printf "%f\n"
         exit;;
       x)
         del+=("$OPTARG")
         rm /home/ric/notes/"${del[0]}".note
         exit;;
     \?) 
         ./notes-help
         exit;;
   esac
done