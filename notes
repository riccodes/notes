#!/bin/bash

while getopts ":chlx:e:m:n:r:s:" option; do
   case $option in
      c)
         ./notes-collect
         exit;;
      e)
         nano /home/ric/notes/"$2".note
         exit;;
      h) 
         ./notes-help
         exit;;
      l) 
         ls -l /home/ric/notes
         exit;;
      n)
         ./nn "$2" "$3"
         exit;;
      m)
         mv /home/ric/notes/"$2".note /home/ric/notes/"$3".note
         exit;;
      r)
         cat /home/ric/notes/"$2".note
         exit;;
       s)
         find /home/ric/notes -name "*$2*.note" -printf "%f\n"
         exit;;
       x)
         rm /home/ric/notes/"$2".note
         exit;;
     \?) 
         ./notes-help
         exit;;
   esac
done

if [ $OPTIND -eq 1 ]; then ls /home/ric/notes; fi