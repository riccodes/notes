#!/bin/bash

while getopts ":chld:e:n:r:s:" option; do
   case $option in
      c)
         ./notes-collect
         exit;;
      d) 
         del+=("$OPTARG")
         rm /home/ric/notes/"${del[0]}".note
         exit;;
      e) 
         edit+=("$OPTARG")
         nano /home/ric/notes/"${edit[0]}".note
         exit;;
      h) 
         ./notes-help
         exit;;
      l) 
         ls /home/ric/notes
         exit;;
      n)
         args+=("$OPTARG")
         ./nn ${args[@]}
         exit;;
      r) 
         read+=("$OPTARG")
         cat /home/ric/notes/"${read[0]}".note
         exit;;
       s) 
         query+=("$OPTARG")
         find /home/ric/notes -name "*${query[0]}*.note" -printf "%f\n"
         exit;;
     \?) 
         echo "Error: Invalid option"
         exit;;
   esac
done